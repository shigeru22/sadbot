{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"outDir": "dist",
    "sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"removeComments": true
	},
	"include": [
		"src/**/*",
		".eslintrc.js"
	],
	"exclude": [
		"build/**/*"
	]
}
